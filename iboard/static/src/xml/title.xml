<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="iboard.Title2" owl="1">
        <div class="grid-stack-item"
             t-att-gs-h="props.chart.config.gsMinHeight"
             t-att-gs-w="props.chart.config.gsMinWidth"
             t-att-gs-min-h="1"
             t-att-gs-min-w="2"
             t-att-id="props.chart.id"
             t-att-gs-x="props.layout[props.chart.id].x"
             t-att-gs-y="props.layout[props.chart.id].y"
        >

            <div class="o_kanban_view o_kanban_ungrouped  grid-stack-item-content">

        <div class="oe_kanban_card  iboard_kanban oe_kanban_global_click o_kanban_record indicator-card"
             t-attf-style="border-left-color:{{ colors }}">
            <div class="row">
                <div class="col-1">
<t t-call="iboard.MenuContainer"/>
                    </div>
                <div class="col-10">
            <h4 class="o_kanban_record_title p-0 indicator-card-title">                                    <span> <t
                    t-esc="props.chart.title"/>
            </span>

            </h4>
                    </div>
                </div>
            <div class="row">
                            <div class="col-8">
                                <div class="container o_kanban_card_content" modifiers="{}">
                                    <div class="row  ml-3" modifiers="{}">
                                        <div class="col-4 p-0" modifiers="{}">
                                                <span class="indicator-card-number" modifiers="{}">
                                                    <t t-esc="props.chart.data.total"/>
                                                </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                <t t-if="props.chart.set_icon">
                            <div class="col-2 text-left pl-0" style="font-size: 60px">
                                <i t-attf-class="fa {{ props.chart.icon }}" t-attf-style="color: {{ colors }}"/>
                            </div>
                        </t>
                </div>
            </div>
        </div>
        </div>
    </t>
</templates>