<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
  <t t-name="iboard.Board" owl="1">
     <div class="grid">
         <link href="/iboard/static/src/css/board.css" rel="stylesheet"/>
         <t t-foreach="state.charts" t-as="chart">
                <ChartFactory
                        t-key="chart.id"
                        chart="chart"
                        google="google"
                />
             </t>
        </div>
  </t>
    <t t-name="iboard.ChartFactory" owl="1">
        <t t-component="getChart"
           t-props="props"
        />
    </t>

    <t t-name="iboard.BaseChart" owl="1">
        <div class="">
             <div>
                  <b><t t-esc="props.chart.title"/></b>
                 <canvas width="400" height="100"
                         t-attf-id="chart_{{ props.chart.id }}"/>
             </div>
        </div>
    </t>

    <t t-name="iboard.Title" owl="1">
        <div class="indicator-card">
  <h2 class="indicator-card-title">TÃ­tulo del indicador</h2>
            <div class="indicator-card-icon">
    <i class="fa fa-icon"></i> <!-- Reemplaza "fa-icon" con la clase del icono que desees usar, como FontAwesome -->
  </div>
            <div class="indicator-card-number">123</div>
</div>

    </t>

</templates>