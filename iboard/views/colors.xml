<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="iboard_config_palette_view_form" model="ir.ui.view">
            <field name="name">iboard_config_palette_view_form</field>
            <field name="model">iboard.config.palette</field>
            <field name="arch" type="xml">
                <form string="iboard_config_palette_form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Paleta de color"/>
                            </h1>
                        </div>
                        <notebook>
                            <page name="page_colors" string="Colores">
                                <group>
                                    <field name="color_ids">
                                        <tree>
                                            <field name="color"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="iboard_config_palette_view_tree" model="ir.ui.view">
            <field name="name">iboard.config.palette_view_tree</field>
            <field name="model">iboard.config.palette</field>
            <field name="arch" type="xml">
                <tree string="iboard.config.palette_tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="iboard_config_palette_action" model="ir.actions.act_window">
            <field name="name">Paleta de colores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">iboard.config.palette</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>