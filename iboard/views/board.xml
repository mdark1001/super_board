<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="board_view_form" model="ir.ui.view">
            <field name="name">board_view_form</field>
            <field name="model">iboard.board</field>
            <field name="arch" type="xml">
                <form string="board_form">
                    <sheet>
                        <div class="oe_button_box" name="expense_button_box">
                            <button name="action_show_board"
                                    type="object"
                                    string="Editar"
                                    class="oe_stat_button"
                                    icon="fa-mortar-board"/>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Tablero de control de empleados"/>
                            </h1>
                        </div>
                        <group>
                            <group>

                            </group>
                        </group>
                        <notebook>
                            <page name="page_charts" string="Indicadores">
                                <group>
                                    <field name="chart_ids" nolabel="1" context="{'default_board_id':id}">
                                        <tree>
                                            <field name="board_id" invisible="1"/>
                                            <field name="title"/>
                                            <field name="chart_type"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="iboard_board_action" model="ir.actions.act_window">
            <field name="name">Tableros</field>
            <field name="res_model">iboard.board</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>