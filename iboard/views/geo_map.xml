<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="iboard_geo_map_view_tree" model="ir.ui.view">
            <field name="name">iboard_geo_map__view_tree</field>
            <field name="model">iboard.geo.map</field>
            <field name="arch" type="xml">
                <tree string="iboard_geo_map__tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="iboard_geo_map_view_form" model="ir.ui.view">
            <field name="name">iboard_geo_map_view_form</field>
            <field name="model">iboard.geo.map</field>
            <field name="arch" type="xml">
                <form string="iboard_geo_map_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="geo_map"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="iboard_geo_map_action" model="ir.actions.act_window">
            <field name="name">Archivos de mapas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">iboard.geo.map</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>